<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>
				<pluginName>Piwik</pluginName>
				<pluginNiceName>Piwiki Analytics Plugin</pluginNiceName>
        <pluginDescription><![CDATA[Integrate Piwik real time web analytics into Pimcore]]></pluginDescription>
        <!-- Plugin Server Host-->
        <pluginServer></pluginServer>
        <!-- Version and Revision are updated by createRevision Script !-->
        <pluginVersion>0.0.1</pluginVersion>
        <pluginRevision>1</pluginRevision>
        <pluginBuildTimestamp>1336112744</pluginBuildTimestamp>
				<!-- <pluginIframeSrc>/plugin/Piwik/admin/settings</pluginIframeSrc> -->
        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>Piwik_Plugin</pluginClassName>
        <!-- include paths relative to plugin-directory -->
				<!-- css files needed for pimcore plugin (backend) with path relative to plugin-directory -->
				<pluginCssPaths>
						<path>/Piwik/static/css/admin.css</path>
				</pluginCssPaths>  				
        <pluginIncludePaths>
            <path>/Piwik/lib</path>
						<path>/Piwik/controllers</path>
        </pluginIncludePaths>
        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>Piwik</namespace>
        </pluginNamespaces>
        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/Piwik/static/js/Piwikplugin.js</path> 
			<path>/Piwik/static/js/settings.js</path>
            <path>/Piwik/static/js/elementoverview.js</path>
			<path>/Piwik/static/js/qrcodes/report.js</path>
			<path>/Piwik/static/js/qrcodes/item.js</path>
			<path>/Piwik/static/js/portlets/visitors.js</path>
			<path>/Piwik/static/js/portlets/pages.js</path>
        </pluginJsPaths>
				<pluginIcon>/plugins/Piwik/static/img/piwik-logo.png</pluginIcon>
    </plugin>
</zend-config>
